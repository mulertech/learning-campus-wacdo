{% if pageCount > 1 %}
    <nav class="flex justify-center items-center space-x-2 my-4">
        {% if previous is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}"
               class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold">
                Précédent
            </a>
        {% else %}
            <span class="px-4 py-2 bg-gray-300 text-gray-500 rounded-lg cursor-not-allowed font-semibold">
                Précédent
            </span>
        {% endif %}

        {% if startPage > 1 %}
            <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}"
               class="px-3 py-2 bg-white border border-gray-400 rounded-lg hover:bg-gray-100">
                1
            </a>
            {% if startPage > 2 %}
                <span class="px-2">...</span>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page == current %}
                <span class="px-3 py-2 bg-blue-600 text-white rounded-lg font-semibold">
                    {{ page }}
                </span>
            {% else %}
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}"
                   class="px-3 py-2 bg-white border border-gray-400 rounded-lg hover:bg-gray-100">
                    {{ page }}
                </a>
            {% endif %}
        {% endfor %}

        {% if endPage < pageCount %}
            {% if endPage < pageCount - 1 %}
                <span class="px-2">...</span>
            {% endif %}
            <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}"
               class="px-3 py-2 bg-white border border-gray-400 rounded-lg hover:bg-gray-100">
                {{ pageCount }}
            </a>
        {% endif %}

        {% if next is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}"
               class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold">
                Suivant
            </a>
        {% else %}
            <span class="px-4 py-2 bg-gray-300 text-gray-500 rounded-lg cursor-not-allowed font-semibold">
                Suivant
            </span>
        {% endif %}
    </nav>
{% endif %}
