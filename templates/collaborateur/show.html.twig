{% extends 'base.html.twig' %}

{% block title %}Collaborateur{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">C</span>OLLABORATEUR</h1>

    <table class="relative mx-auto overflow-hidden my-4 rounded-xl shadow-xl">
        <thead class="text-md text-gray-700 uppercase bg-gray-200">
            <tr>
                <th class="px-6 py-3">Prénom</th>
                <th class="px-6 py-3">Nom</th>
                <th class="px-6 py-3">Email</th>
                <th class="px-6 py-3">Date de première embauche</th>
                <th class="px-6 py-3">Administrateur</th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4">{{ collaborateur.prenom }}</td>
                <td class="px-6 py-4">{{ collaborateur.nom }}</td>
                <td class="px-6 py-4">{{ collaborateur.email }}</td>
                <td class="px-6 py-4">{{ collaborateur.datePremiereEmbauche|date('d/m/Y') }}</td>
                <td class="px-6 py-4">{{ collaborateur.administrateur ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <h2 class="text-center text-2xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">L</span>iste des affectations</h2>

    <div class="flex items-center justify-center">
        {{ form_start(form, {
            attr: { class: 'flex bg-white rounded-xl shadow-lg border border-gray-400' }
        }) }}
            {{ form_label(form.debut, 'Date de début d\'affectation :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.debut, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_label(form.fonction, 'Fonction :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.fonction, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_row(form.submit, {
                label: 'Rechercher',
                attr: { class: 'flex px-2 items-center bg-blue-600 rounded-r-xl font-semibold text-lg text-blue-100 hover:bg-blue-700' }
            }) }}
        {{ form_end(form) }}
    </div>

    <table class="relative mx-auto overflow-hidden my-4 rounded-xl shadow-xl">
        <thead class="text-md text-gray-700 uppercase bg-gray-200">
        <tr>
            <th class="px-6 py-3">Fonction</th>
            <th class="px-6 py-3">Restaurant</th>
            <th class="px-6 py-3">Ville</th>
            <th class="px-6 py-3">Date de début</th>
            <th class="px-6 py-3">Date de fin</th>
            <th class="px-6 py-3">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for affectation in affectations %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4">{{ affectation.fonction.intitule }}</td>
                <td class="px-6 py-4">{{ affectation.restaurant.nom }}</td>
                <td class="px-6 py-4">{{ affectation.restaurant.ville }}</td>
                <td class="px-6 py-4">{{ affectation.dateDebut|date('d/m/Y') }}</td>
                <td class="px-6 py-4">{{ affectation.dateFin ? affectation.dateFin|date('d/m/Y') : '' }}</td>
                <td class="px-6 py-4">
                    {% if not affectation.dateFin %}
                        <a class="text-blue-600 p-4 items-center font-semibold text-lg hover:text-blue-500" href="{{ path('app_affectation_edit', {'id': affectation.id}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr class="bg-white border-b border-gray-200">
                <td colspan="4">Pas d'affectations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_collaborateur_index') }}">Retourner à la liste</a>

    <a href="{{ path('app_collaborateur_edit', {'id': collaborateur.id}) }}">Modifier ce collaborateur</a>

    {{ include('collaborateur/_delete_form.html.twig') }}
{% endblock %}
