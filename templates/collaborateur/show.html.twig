{% extends 'base.html.twig' %}

{% block title %}Collaborateur{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl text-shadow-lg font-medium m-8 text-white">
        <span class="text-yellow-300">C</span>OLLABORATEUR
    </h1>

    <div class="w-fit relative mx-auto overflow-hidden shadow-xl bg-white rounded-xl p-12 mt-12">
        {{ include('collaborateur/_form.html.twig', {'button_label': 'Modifier ce collaborateur'}) }}
        {{ include('collaborateur/_delete_form.html.twig') }}
    </div>

    <h2 class="text-center text-3xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">L</span>iste des affectations</h2>

    <twig:collaborateur_show :collaborateur="collaborateur" />

    <a href="{{ path('app_collaborateur_index') }}" class="p-2 items-center bg-blue-600 rounded-xl font-semibold text-lg text-blue-100 hover:bg-blue-700">
        Retourner à la liste
    </a>

    <a href="{{ path('app_collaborateur_new_affectation', {'id': collaborateur.id}) }}" class="ml-4 p-2 items-center bg-blue-600 rounded-xl font-semibold text-lg text-blue-100 hover:bg-blue-700">
        Affecter ce collaborateur à un nouveau poste
    </a>
{% endblock %}
