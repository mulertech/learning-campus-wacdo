{% extends 'base.html.twig' %}

{% block title %}Gestion des collaborateurs{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">G</span>ESTION DES COLLABORATEURS</h1>

    <div class="flex items-center justify-center">
        {{ form_start(form, {
            attr: { class: 'flex bg-white rounded-xl shadow-lg border border-gray-400' }
        }) }}
            {{ form_label(form.nom, 'Nom :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.nom, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_label(form.fonction, 'Fonction :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.fonction, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_row(form.submit, {
                label: 'Rechercher',
                attr: { class: 'flex px-2 items-center bg-blue-600 rounded-r-xl font-semibold text-lg text-blue-100 hover:bg-blue-700' }
            }) }}
        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_collaborateur_without_affectation') }}">Collaborateurs non affectés</a>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Date de première embauche</th>
                <th>Administrateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collaborateur in collaborateurs %}
            <tr>
                <td>{{ collaborateur.prenom }}</td>
                <td>{{ collaborateur.nom }}</td>
                <td>{{ collaborateur.email }}</td>
                <td>{{ collaborateur.datePremiereEmbauche|date('d/m/Y') }}</td>
                <td>{{ collaborateur.administrateur ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_collaborateur_show', {'id': collaborateur.id}) }}">Détail</a>
                    <a href="{{ path('app_collaborateur_edit', {'id': collaborateur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas de collaborateur</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_collaborateur_new') }}">Créer un nouveau collaborateur</a>
{% endblock %}
