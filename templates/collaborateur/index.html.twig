{% extends 'base.html.twig' %}

{% block title %}Gestion des collaborateurs{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">G</span>ESTION DES COLLABORATEURS</h1>

    <div class="flex items-center justify-center">
        {{ form_start(form, {
            attr: { class: 'flex bg-white rounded-xl shadow-lg border border-gray-400' }
        }) }}
            {{ form_label(form.prenom, 'Prénom :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.prenom, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_label(form.nom, 'Nom :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.nom, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_label(form.email, 'Email :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.email, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_widget(form.submit, {
                label: 'Rechercher',
                attr: { class: 'flex px-2 items-center bg-blue-600 rounded-r-xl font-semibold text-lg text-blue-100 hover:bg-blue-700' }
            }) }}
        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_collaborateur_without_affectation') }}" class="p-2 items-center bg-blue-600 rounded-xl font-semibold text-lg text-blue-100 hover:bg-blue-700">
        Collaborateurs non affectés
    </a>
    <br>
    <table class="relative overflow-x-auto w-full my-4">
        <thead class="text-md text-gray-700 uppercase bg-gray-200">
            <tr>
                <th class="px-6 py-3">Prénom</th>
                <th class="px-6 py-3">Nom</th>
                <th class="px-6 py-3">Email</th>
                <th class="px-6 py-3">Date de première embauche</th>
                <th class="px-6 py-3">Administrateur</th>
                <th class="px-6 py-3">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collaborateur in collaborateurs %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4">{{ collaborateur.prenom }}</td>
                <td class="px-6 py-4">{{ collaborateur.nom }}</td>
                <td class="px-6 py-4">{{ collaborateur.email }}</td>
                <td class="px-6 py-4">{{ collaborateur.datePremiereEmbauche|date('d/m/Y') }}</td>
                <td class="px-6 py-4">{{ collaborateur.administrateur ? 'Oui' : 'Non' }}</td>
                <td class="px-6 py-4">
                    <a class="text-blue-600 p-4 items-center font-semibold text-lg hover:text-blue-500" href="{{ path('app_collaborateur_show', {'id': collaborateur.id}) }}">
                        Détail
                    </a>
                </td>
            </tr>
        {% else %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4" colspan="8">Pas de collaborateur</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_collaborateur_new') }}" class="p-2 items-center bg-blue-600 rounded-xl font-semibold text-lg text-blue-100 hover:bg-blue-700">
        Créer un nouveau collaborateur
    </a>
{% endblock %}
