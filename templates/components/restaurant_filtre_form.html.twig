<div {{ attributes }}>
    <div class="flex items-center justify-center">
        <form class="flex bg-white rounded-xl shadow-lg border border-gray-400">
            <label class="flex font-semibold text-lg mx-2" for="nom">Nom :</label>
            <input 
                type="text" 
                id="nom" 
                name="nom" 
                data-model="nom"
                value="{{ nom }}"
                class="flex items-center bg-gray-200 px-2 border-x border-gray-400"
            />
            
            <label class="flex font-semibold text-lg mx-2" for="codePostal">Code postal :</label>
            <input 
                type="text" 
                id="codePostal" 
                name="codePostal" 
                data-model="codePostal"
                value="{{ codePostal }}"
                class="flex items-center bg-gray-200 px-2 border-x border-gray-400"
            />
            
            <label class="flex font-semibold text-lg mx-2" for="ville">Ville :</label>
            <input 
                type="text" 
                id="ville" 
                name="ville" 
                data-model="ville"
                value="{{ ville }}"
                class="flex items-center bg-gray-200 px-2 border-x border-gray-400"
            />
        </form>
    </div>

    <table class="relative overflow-x-auto w-full my-4">
        <thead class="text-md text-gray-700 uppercase bg-gray-200">
            <tr>
                <th class="px-6 py-3">Nom</th>
                <th class="px-6 py-3">Adresse</th>
                <th class="px-6 py-3">Code postal</th>
                <th class="px-6 py-3">Ville</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in this.restaurants %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4">
                    <a class="text-blue-600 p-4 items-center font-semibold text-lg hover:text-blue-500" href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}">
                        {{ restaurant.nom }}
                    </a>
                </td>
                <td class="px-6 py-4">{{ restaurant.adresse }}</td>
                <td class="px-6 py-4">{{ restaurant.codePostal }}</td>
                <td class="px-6 py-4">{{ restaurant.ville }}</td>
            </tr>
        {% else %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4" colspan="6">
                    Pas de restaurant
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagination">
        {{ knp_pagination_render(this.restaurants, 'partials/pagination_live.html.twig') }}
    </div>

    <a href="{{ path('app_restaurant_new') }}" class="p-2 items-center bg-blue-600 rounded-xl font-semibold text-lg text-blue-100 hover:bg-blue-700">
        CrÃ©er un nouveau restaurant
    </a>
</div>
