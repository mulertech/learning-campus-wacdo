{% extends 'base.html.twig' %}

{% block title %}Affectations de ce restaurant{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">A</span>FFECTATIONS DU RESTAURANT {{ restaurant.nom|upper }}</h1>

    <table class="relative overflow-x-auto w-full my-4">
        <thead class="text-md text-gray-700 uppercase bg-gray-200">
            <tr>
                <th class="px-6 py-3">Prénom</th>
                <th class="px-6 py-3">Nom</th>
                <th class="px-6 py-3">Email</th>
                <th class="px-6 py-3">Poste</th>
                <th class="px-6 py-3">Date de début</th>
                <th class="px-6 py-3">Date de fin</th>
            </tr>
        </thead>
        <tbody>
        {% for affectation in restaurant.affectations %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4">{{ affectation.collaborateur.prenom }}</td>
                <td class="px-6 py-4">{{ affectation.collaborateur.nom }}</td>
                <td class="px-6 py-4">{{ affectation.collaborateur.email }}</td>
                <td class="px-6 py-4">{{ affectation.fonction.intitule }}</td>
                <td class="px-6 py-4">{{ affectation.dateDebut|date('d/m/Y') }}</td>
                <td class="px-6 py-4">{{ affectation.dateFin ? affectation.dateFin|date('d/m/Y') : '' }}</td>
            </tr>
        {% else %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4" colspan="4">
                    Pas d'affectations
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_affectation_new', {'id': restaurant.id}) }}" class="p-2 items-center bg-blue-600 rounded-xl font-semibold text-lg text-blue-100 hover:bg-blue-700">
        Affecter un nouveau collaborateur
    </a>
{% endblock %}
