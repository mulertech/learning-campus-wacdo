<turbo-frame id="modal">
    {# Backdrop fixe en plein écran #}
    <div class="fixed inset-0 bg-black bg-opacity-50 z-40"></div>

    {# Modale centrée par-dessus le backdrop #}
    <div class="fixed inset-0 z-50 flex items-center justify-center pointer-events-none">
        <div class="relative bg-white rounded-2xl shadow-2xl max-w-md w-full mx-4 overflow-hidden pointer-events-auto">
            {# En-tête #}
            <div class="bg-red-600 px-6 py-4">
                <h3 class="text-xl font-bold text-white flex items-center">
                    Confirmer la suppression
                </h3>
            </div>

            {# Corps de la modale #}
            <div class="p-6">
                <p class="text-gray-700 text-lg mb-4">
                    Êtes-vous sûr de vouloir supprimer ce restaurant ?
                </p>

                <p class="text-lg text-center text-red-600 font-medium mb-6">
                    Cette action est irréversible !
                </p>

                {# Boutons d'action #}
                <div class="flex gap-3">
                    {# Bouton Annuler - ferme la modale #}
                    <a href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}"
                       data-turbo-frame="modal"
                       class="flex-1 text-center flex items-center justify-center bg-gray-200 text-gray-700 rounded-xl font-semibold
hover:bg-gray-300 transition-colors">
                        Annuler
                    </a>

                    {# Bouton Confirmer - soumet le formulaire #}
                    <form method="post"
                          action="{{ path('app_restaurant_delete', {'id': restaurant.id}) }}"
                          data-turbo-frame="_top"
                          class="flex-1">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ restaurant.id) }}">
                        <button type="submit"
                                class="w-full px-4 py-3 bg-red-600 text-white rounded-xl font-semibold hover:bg-red-700 transition-colors">
                            Supprimer définitivement
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</turbo-frame>
