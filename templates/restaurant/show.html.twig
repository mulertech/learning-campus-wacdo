{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">R</span>estaurant</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Ville</th>
            </tr>
        <tbody>
            <tr>
                <td>{{ restaurant.nom }}</td>
                <td>{{ restaurant.adresse }}</td>
                <td>{{ restaurant.codePostal }}</td>
                <td>{{ restaurant.ville }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <a class="p-2 items-center bg-blue-600 rounded-xl font-semibold text-md text-blue-100 hover:bg-blue-700" href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}">
        Modifier ce restaurant
    </a>
    <br>
    <h2 class="text-center text-2xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">L</span>iste des collaborateurs</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Poste</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for affectation in affectations %}
                <tr>
                    <td>{{ affectation.prenom }}</td>
                    <td>{{ affectation.nom }}</td>
                    <td>{{ affectation.email }}</td>
                    <td>{{ affectation.intitule }}</td>
                    <td>{{ affectation.dateDebut|date('d/m/Y') }}</td>
                    <td>{{ affectation.dateFin ? affectation.dateFin|date('d/m/Y') : '' }}</td>
                    <td>
                        {% if (not affectation.dateFin) or (affectation.dateFin > date()) %}
                            <a href="{{ path('app_affectation_edit', {'id': affectation.id}) }}">Modifier</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas de collaborateurs</td>
                </tr>
            {% endfor %}
    </table>

    <a href="{{ path('app_affectations_restaurant', {'id': restaurant.id}) }}">Modifier</a>

    <a href="{{ path('app_restaurant_index') }}">Retourner à la liste des restaurants</a>

    {{ include('restaurant/_delete_form.html.twig') }}
{% endblock %}
