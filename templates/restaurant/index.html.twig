{% extends 'base.html.twig' %}

{% block title %}Gestion des restaurants{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">G</span>ESTION DES RESTAURANTS</h1>

    <div class="flex items-center justify-center">
        {{ form_start(form, {
            attr: { class: 'flex bg-white rounded-xl shadow-lg border border-gray-400' }
        }) }}
            {{ form_label(form.nom, 'Nom :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.nom, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            <div class="text-red-600 text-sm">
                {{ form_errors(form.nom) }}
            </div>
            {{ form_label(form.codePostal, 'Code postal', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.codePostal, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            <div class="text-red-600 text-sm">
                {{ form_errors(form.codePostal) }}
            </div>
            {{ form_label(form.ville, 'Ville', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.ville, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            <div class="text-red-600 text-sm">
                {{ form_errors(form.ville) }}
            </div>

            <div class="md:col-span-2 text-red-600 text-sm mt-4">
                {{ form_errors(form) }}
            </div>

            <button type="submit" class="flex px-2 items-center bg-blue-600 rounded-r-xl font-semibold text-lg text-blue-100 hover:bg-blue-700 border border-gray-400">Rechercher</button>
        {{ form_end(form) }}
    </div>

    <table class="relative overflow-x-auto w-full my-4">
        <thead class="text-md text-gray-700 uppercase bg-gray-200">
            <tr>
                <th class="px-6 py-3">Nom</th>
                <th class="px-6 py-3">Adresse</th>
                <th class="px-6 py-3">Code postal</th>
                <th class="px-6 py-3">Ville</th>
                <th class="px-6 py-3">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4">{{ restaurant.nom }}</td>
                <td class="px-6 py-4">{{ restaurant.adresse }}</td>
                <td class="px-6 py-4">{{ restaurant.codePostal }}</td>
                <td class="px-6 py-4">{{ restaurant.ville }}</td>
                <td class="px-6 py-4">
                    <a class="p-2 items-center bg-blue-600 rounded-xl font-semibold text-md text-blue-100 hover:bg-blue-700" href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}">Détail du restaurant</a>
                    <a class="p-2 items-center bg-blue-600 rounded-xl font-semibold text-md text-blue-100 hover:bg-blue-700" href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}">Modifier un restaurant</a>
                </td>
            </tr>
        {% else %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4" colspan="6">Pas de restaurant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_restaurant_new') }}" class="p-2 items-center bg-blue-600 rounded-xl font-semibold text-lg text-blue-100 hover:bg-blue-700">Créer un nouveau restaurant</a>
{% endblock %}
