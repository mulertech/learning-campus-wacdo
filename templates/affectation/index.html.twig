{% extends 'base.html.twig' %}

{% block title %}Recherche des affectations{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">R</span>ECHERCHE DES AFFECTATIONS</h1>

    <div class="flex items-center justify-center">
        {{ form_start(form, {
            attr: { class: 'flex bg-white rounded-xl shadow-lg border border-gray-400' }
        }) }}
            {{ form_label(form.restaurant, 'Restaurant :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.restaurant, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_label(form.debut, 'Début de période :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.debut, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_label(form.fin, 'Fin de période :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.fin, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_label(form.fonction, 'Fonction :', {
                label_attr: { class: 'flex font-semibold text-lg mx-2' }
            }) }}
            {{ form_widget(form.fonction, {
                attr: { class: 'flex items-center bg-gray-200 px-2 border-x border-gray-400' }
            }) }}
            {{ form_row(form.submit, {
                label: 'Rechercher',
                attr: { class: 'flex px-2 items-center bg-blue-600 rounded-r-xl font-semibold text-lg text-blue-100 hover:bg-blue-700' }
            }) }}
        {{ form_end(form) }}
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Collaborateur</th>
                <th>Fonction</th>
                <th>Restaurant</th>
                <th>Ville</th>
                <th>Date de début</th>
                <th>Date de fin</th>
            </tr>
        </thead>
        <tbody>
        {% for affectation in affectations %}
            <tr>
                <td>{{ affectation.collaborateur.prenom }} {{ affectation.collaborateur.nom }}</td>
                <td>{{ affectation.fonction.intitule }}</td>
                <td>{{ affectation.restaurant.nom }}</td>
                <td>{{ affectation.restaurant.ville }}</td>
                <td>{{ affectation.dateDebut|date('d/m/Y') }}</td>
                <td>{{ affectation.dateFin ? affectation.dateFin|date('d/m/Y') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'affectations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
