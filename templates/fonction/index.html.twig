{% extends 'base.html.twig' %}

{% block title %}Gestion des fonctions{% endblock %}

{% block body %}
    <h1>Gestion des fonctions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Intitulé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fonction in fonctions %}
            <tr>
                <td>{{ fonction.intitule }}</td>
                <td>
                    <a href="{{ path('app_fonction_show', {'id': fonction.id}) }}">Détail</a>
                    <a href="{{ path('app_fonction_edit', {'id': fonction.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de fonction</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fonction_new') }}">Créer une nouvelle fonction</a>
{% endblock %}
