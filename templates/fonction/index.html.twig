{% extends 'base.html.twig' %}

{% block title %}Gestion des fonctions{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl text-shadow-lg font-medium m-8 text-white"><span class="text-yellow-300">G</span>ESTION DES FONCTIONS</h1>

    <table class="relative mx-auto overflow-hidden my-4 rounded-xl shadow-xl">
        <thead class="text-md text-gray-700 uppercase bg-gray-200">
            <tr>
                <th class="px-6 py-3">Intitulé</th>
            </tr>
        </thead>
        <tbody>
        {% for fonction in fonctions %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4">
                    <a class="text-blue-600 p-4 items-center font-semibold text-lg hover:text-blue-500" href="{{ path('app_fonction_edit', {'id': fonction.id}) }}">
                        {{ fonction.intitule }}
                    </a>
                </td>
            </tr>
        {% else %}
            <tr class="bg-white border-b border-gray-200">
                <td class="px-6 py-4" colspan="3">Pas de fonction</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fonction_new') }}">Créer une nouvelle fonction</a>
{% endblock %}
